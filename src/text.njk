            or PayPal — {{ links.support.paypal }}

            Discuss in Slack — {{ links.discuss.slack }}
        {% endset %}
    {%- endif -%}

    {%- set episodeDescription %}
        {{ localeHosts }}
        {% for host in episode.data.hosts -%}
            — {{ host }}
        {% endfor %}

        {{ localeTopics }}
        {%- if episode.data.chapters -%}
            {%- for chapter in episode.data.chapters %}
            — {{ chapter.time }} {{ chapter.title }}
            {%- endfor %}
        {%- endif %}
        {{ localeLinks }}
        {{ episode.templateContent }}
    {% endset %}

    {%- if loop.first -%}
        {{- episode.fileSlug }}. {{ episode.data.title }}

        {{ episodeDescription }}
    {%- endif -%}

{%- endfor -%}
