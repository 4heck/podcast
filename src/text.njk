        {% endset %}
    {%- else -%}
        {% set localeHosts = 'Hosts' %}
        {% set localeTopics = 'Topics' %}
        {% set localeDate = episode.date | enDate %}
        {% set localeLinks %}
            Listen to new episodes in
            Google Podcasts — {{ links.listen.google }}
            Apple Podcasts — {{ links.listen.apple }}
            CastBox — {{ links.listen.castbox }}
            Pocket Casts — {{ links.listen.pocket }}
            Overcast — {{ links.listen.overcast }}
            VK — {{ links.listen.vk }}
            Yandex.Music — {{ links.listen.yandex }}
            Spotify — {{ links.listen.spotify }}
            YouTube — {{ links.listen.youtube }}
            SoundCloud — {{ links.listen.soundcloud }}
            or subscribe to RSS — {{ links.listen.rss }}

            Read news on
            Twitter — {{ links.read.twitter }}
            VK — {{ links.read.vk }}
            Facebook — {{ links.read.facebook }}
